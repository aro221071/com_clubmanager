<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_CLUBMANAGER_FORM_LBL_COUNTY_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text" size="40" class="inputbox"
                                                    
            label="COM_CLUBMANAGER_FORM_LBL_COUNTY_NAME"
            description="COM_CLUBMANAGER_FORM_DESC_COUNTY_NAME" 
                                                    
                                                    
                                                     required="true" 
                                                    filter="safehtml" /> 

       <field name="shortname" type="text" size="40" class="inputbox"
                                                    
            label="COM_CLUBMANAGER_FORM_LBL_COUNTY_SHORTNAME"
            description="COM_CLUBMANAGER_FORM_DESC_COUNTY_SHORTNAME" 
                                                    
                                                    
                                                    
                                                    filter="safehtml" /> 

 <field name="country" type="foreignkey" class="inputbox"
            label="COM_CLUBMANAGER_FORM_LBL_COUNTY_COUNTRY"
            description="COM_CLUBMANAGER_FORM_DESC_COUNTY_COUNTRY" input_type="list" table="#__clubmanager_country" key_field="id" value_field="name"  /> 

       <field name="filter_country" type="sql" class="inputbox"
            onchange="this.form.submit();" translate="true"
            query="SELECT 0 AS `id`, 'COM_CLUBMANAGER_COUNTIES_COUNTRY_FILTER_DEFAULT_OPTION' AS `val` UNION SELECT `id`, `name` AS val FROM `#__clubmanager_country`" key_field="id" value_field="val"
             /> 

       <field name="default" type="checkbox"
                
            label="COM_CLUBMANAGER_FORM_LBL_COUNTY_DEFAULT"
            description="COM_CLUBMANAGER_FORM_DESC_COUNTY_DEFAULT" 
                 default="0" 
                
                
            value="0"
            class="cbDefault" /> 

       <field name="comment" type="text" size="40" class="inputbox"
                                                    
            label="COM_CLUBMANAGER_FORM_LBL_COUNTY_COMMENT"
            description="COM_CLUBMANAGER_FORM_DESC_COUNTY_COMMENT" 
                                                    
                                                    
                                                    
                                                    filter="safehtml" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_CLUBMANAGER_FORM_LBL_COUNTY_CREATED_BY"
            description="COM_CLUBMANAGER_FORM_DESC_COUNTY_CREATED_BY"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
